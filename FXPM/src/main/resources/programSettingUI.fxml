<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1 " alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefWidth="380.0" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.passswordmanager.Controllers.ProgramSettingUIController">
   <children>
      <Label alignment="CENTER" text="Program Settings">
         <font>
            <Font size="24.0"/>
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label minWidth="50.0" prefHeight="17.0" prefWidth="122.0" text="Program Title" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="10.0"/>
               </HBox.margin>
            </Label>
            <TextField fx:id="title" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="10.0" right="10.0"/>
               </HBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="5.0"/>
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label minWidth="50.0" prefHeight="17.0" prefWidth="122.0" text="Program Nickname" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="10.0"/>
               </HBox.margin>
            </Label>
            <TextField fx:id="nickname" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="10.0" right="10.0"/>
               </HBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label minWidth="50.0" prefHeight="17.0" text="KeyShortCut Behaviour">
               <HBox.margin>
                  <Insets left="10.0"/>
               </HBox.margin>
            </Label>
            <HBox HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="keyShortCut" style="-fx-background-radius: 3 0 0 3;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0"/>
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="Keywords: USERNAME, PASSWORD, TAB, ENTER"/>
                     </tooltip>
                  </TextField>
                  <Label style="-fx-background-color: #a1a1a1; -fx-background-radius: 0 3 3 0;" text="?" underline="true">
                     <font>
                        <Font name="System Bold" size="16.0"/>
                     </font>
                     <tooltip>
                        <Tooltip text="Keywords: USERNAME, PASSWORD, TAB, ENTER"/>
                     </tooltip>
                     <HBox.margin>
                        <Insets right="10.0"/>
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_RIGHT" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#onConfirmPressed" text="Confirm">
               <HBox.margin>
                  <Insets right="10.0"/>
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </HBox>
   </children>
</VBox>
