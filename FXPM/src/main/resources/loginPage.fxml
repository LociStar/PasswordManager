<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #4a4a4a;" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.passswordmanager.Controllers.LoginPageController">
   <children>
      <HBox alignment="TOP_CENTER" style="-fx-background-color: #575757;">
         <children>
            <Separator cacheShape="false" prefWidth="124.0" visible="false" HBox.hgrow="ALWAYS"/>
            <Label contentDisplay="CENTER" minWidth="78.0" prefHeight="35.0" prefWidth="78.0" text="Startup" textFill="#f2f2f2">
               <font>
                  <Font size="24.0"/>
               </font>
               <HBox.margin>
                  <Insets/>
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" top="5.0"/>
               </padding>
            </Label>
            <Separator cacheShape="false" prefWidth="100.0" visible="false" HBox.hgrow="ALWAYS"/>
            <Button mnemonicParsing="false" onAction="#onXClicked" prefWidth="24.0"
                    style="-fx-background-color: #4a4a4a; -fx-background-radius: 0 0 0 0;" text="X" textFill="RED" HBox.hgrow="ALWAYS"/>
         </children>
         <VBox.margin>
            <Insets/>
         </VBox.margin>
      </HBox>
      <Separator prefWidth="200.0">
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </Separator>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <Label minWidth="80.0" prefHeight="25.0" prefWidth="90.0" text="Master Password" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" right="20.0"/>
               </HBox.margin>
            </Label>
            <PasswordField fx:id="passwordField" onKeyPressed="#onKeyPressed" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="10.0"/>
               </HBox.margin>
            </PasswordField>
         </children>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Button minWidth="100.0" mnemonicParsing="false" onAction="#onUnlockPressed" prefHeight="34.0" prefWidth="200.0" text="Unlock"
                    textFill="WHITE">
               <HBox.margin>
                  <Insets bottom="10.0"/>
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets bottom="10.0"/>
         </opaqueInsets>
      </HBox>
   </children>
</VBox>
